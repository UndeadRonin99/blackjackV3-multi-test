@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to Blackjack";
}

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true">

<div class="splash-container">
    <div class="hero-section">
    <h1 class="hero-title">♠ ♥ ♦ ♣<br/>BLACKJACK</h1>
    <p class="hero-subtitle">Experience the thrill of 21 - Play solo or with friends!</p>
        
    <div class="game-features">
  <div class="feature">
     <div class="feature-icon">💰</div>
 <div class="feature-text">$1,000 Starting Balance</div>
            </div>
 <div class="feature">
           <div class="feature-icon">🎯</div>
                <div class="feature-text">3:2 Blackjack Payout</div>
       </div>
       <div class="feature">
        <div class="feature-icon">⚡</div>
          <div class="feature-text">Real-time Multiplayer</div>
 </div>
        </div>
    </div>

    <div class="game-modes">
        <div class="mode-card">
            <div class="mode-icon">🎲</div>
            <h2 class="mode-title">Single Player</h2>
            <p class="mode-description">
      Classic Blackjack experience. Test your skills against the dealer
  in a traditional game. Perfect for practice or solo play.
     </p>
      <a href="/Game" class="mode-button solo">Play Solo</a>
        </div>

        <div class="mode-card featured">
            <div class="mode-icon">👥</div>
   <h2 class="mode-title">
  Multiplayer
       <span class="mode-badge">NEW!</span>
       </h2>
   <p class="mode-description">
  Join a table with up to 5 players! Each player has their own hand
  and balance. Share a table link and play with friends in real-time.
    </p>
         <a href="/MultiplayerGame" class="mode-button multi">Play Multiplayer</a>
 </div>
    </div>

